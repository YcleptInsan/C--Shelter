<h2>Here are all the animals in this category:</h2>
<h4>(Alphabetically by name)</h4>

@if (@Model["animals"].Count == 0)
{
  <p>No animals have been added yet!</p>
}
else
{
  <ul>
    @foreach (var animal in @Model["animals"])
    {
      <li><a href="/animals/@animal.GetId()">@animal.GetName(), @animal.GetBreed()</a></li>
    }
  </ul>
}
<p><a href="/animals/new">Add a new animal</a></p>
